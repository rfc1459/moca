<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Variation on Theme.Sherlock adapted for MOCA -->
    <style name="Theme.Moca.Dark" parent="Theme.Sherlock">
        <item name="vpiTitlePageIndicatorStyle">@style/Widget.TitlePageIndicator</item>
    </style>

    <style name="ListView">
        <item name="android:dividerHeight">2dp</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <!-- Indeterminate spinner (blatantly ripped from GitHub for Android) -->
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="Tweet" />

    <style name="Tweet.UserName">
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:textColor">@color/tweet_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Tweet.UserHandle">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/tweet_secondary</item>
    </style>

    <style name="Tweet.Timestamp">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/tweet_timestamp</item>
    </style>

    <style name="Widget.TitlePageIndicator">
        <item name="android:background">@android:color/black</item>
        <item name="footerColor">@color/moca_orange</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="selectedColor">@color/moca_orange</item>
        <item name="footerIndicatorUnderlinePadding">10dp</item>
    </style>
</resources>
